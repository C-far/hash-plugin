{
    "user": "C-far",
    "repo": "hash-plugin",
    "resources": [
        {
            "name": "^hash-plugin-(.*).zip$",
            "platform": "linux",
            "archive": true,
            "includes": ["hash-plugin-(.*)"],
            "plugins": ["hash-plugin-(.*)/hash.so"]
        },
        {
            "name": "^hash-plugin-(.*).zip$",
            "platform": "windows",
            "archive": true,
            "includes": ["hash-plugin-(.*)"],
            "plugins": ["hash-plugin-(.*)/hash.dll"]
        }
    ],
    "runtime": {
        "plugins": ["C-far/hash-plugin"]
    }
}
